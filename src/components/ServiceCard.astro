---
export interface Props {
  title: string;
  description: string;
  price?: string;
  features: string[];
  urgent?: boolean;
}

const { title, description, price, features, urgent = false } = Astro.props;
---

<div class={`bg-white rounded-lg shadow-md p-6 ${urgent ? 'ring-2 ring-red-500 ring-opacity-50' : ''}`}>
  {urgent && (
    <div class="flex items-center gap-2 mb-4">
      <span class="bg-red-100 text-red-800 text-xs font-semibold px-2 py-1 rounded-full">
        ðŸš¨ Emergency Service
      </span>
    </div>
  )}

  <h3 class="text-xl font-bold text-gray-900 mb-3">{title}</h3>
  <p class="text-gray-600 mb-4">{description}</p>

  {price && (
    <div class="mb-4">
      <span class="text-2xl font-bold text-green-600">{price}</span>
      <span class="text-gray-500 text-sm ml-2">starting from</span>
    </div>
  )}

  <ul class="space-y-2 mb-6">
    {features.map(feature => (
      <li class="flex items-start gap-2 text-sm text-gray-700">
        <span class="text-green-500 mt-0.5">âœ“</span>
        {feature}
      </li>
    ))}
  </ul>

  <button class={`w-full py-3 px-4 rounded-lg font-semibold transition-colors ${
    urgent
      ? 'bg-red-600 hover:bg-red-700 text-white'
      : 'bg-blue-600 hover:bg-blue-700 text-white'
  }`}>
    {urgent ? 'Call Now - Emergency' : 'Get Quote'}
  </button>
</div>