---
import OptimizedImage from './OptimizedImage.astro';

export interface Props {
  service: 'plumbing' | 'electrical';
  title: string;
  subtitle: string;
  emergencyNumber: string;
}

const { service, title, subtitle, emergencyNumber } = Astro.props;

const serviceColors = {
  plumbing: {
    bg: 'bg-blue-700',
    text: 'text-blue-700',
    accent: 'bg-blue-50',
    border: 'border-blue-200'
  },
  electrical: {
    bg: 'bg-orange-600',
    text: 'text-orange-600',
    accent: 'bg-orange-50',
    border: 'border-orange-200'
  }
};

const colors = serviceColors[service];

const heroImages = {
  plumbing: '/images/heroes/plumbing-hero.svg',
  electrical: '/images/heroes/electrical-hero.svg'
};

const heroImage = heroImages[service];
---

<section class="relative overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <OptimizedImage
      src={heroImage}
      alt={`Professional ${service} technician providing expert ${service} services in Vancouver`}
      class="w-full h-full object-cover"
      loading="eager"
      width={1600}
      height={800}
    />
    <div class="absolute inset-0 bg-black/50"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 py-20 md:py-32">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center text-white">
        <!-- Service Badge -->
        <div class="inline-flex items-center space-x-2 bg-white/20 backdrop-blur-sm px-4 py-2 rounded-full text-sm mb-6">
          <span class="w-2 h-2 bg-white rounded-full animate-pulse"></span>
          <span class="font-semibold tracking-wide uppercase">Professional {service.charAt(0).toUpperCase() + service.slice(1)} Service</span>
        </div>

        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
          {title}
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-white/90 max-w-4xl mx-auto leading-relaxed">
          {subtitle}
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
          <a
            href={`tel:${emergencyNumber.replace(/\D/g, '')}`}
            class="bg-red-600 hover:bg-red-700 text-white px-8 py-4 rounded-xl text-lg font-bold flex items-center gap-3 transition-all duration-200 shadow-xl hover:shadow-2xl transform hover:scale-105 touch-manipulation"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
            </svg>
            <span>Emergency Call: {emergencyNumber}</span>
          </a>
          <a
            href="#services"
            class="bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white border border-white/30 hover:border-white/50 px-8 py-4 rounded-xl text-lg font-semibold transition-all duration-200 touch-manipulation"
          >
            View All Services
          </a>
        </div>

        <!-- Trust Indicators -->
        <div class="flex flex-wrap justify-center gap-8 text-sm">
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
            <span>24/7 Emergency Response</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 bg-blue-400 rounded-full"></div>
            <span>Licensed & Insured</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 bg-amber-400 rounded-full"></div>
            <span>15-Minute Response</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 bg-purple-400 rounded-full"></div>
            <span>Free Estimates</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="py-4 bg-white border-b">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-wrap justify-center gap-8 text-sm text-gray-600">
      <div class="flex items-center gap-2">
        <span class="w-3 h-3 bg-green-500 rounded-full"></span>
        24/7 Emergency Service
      </div>
      <div class="flex items-center gap-2">
        <span class="w-3 h-3 bg-green-500 rounded-full"></span>
        Licensed & Insured
      </div>
      <div class="flex items-center gap-2">
        <span class="w-3 h-3 bg-green-500 rounded-full"></span>
        Same-Day Service
      </div>
      <div class="flex items-center gap-2">
        <span class="w-3 h-3 bg-green-500 rounded-full"></span>
        Free Estimates
      </div>
    </div>
  </div>
</section>