---
export interface Props {
  service: 'plumbing' | 'electrical';
  title: string;
  subtitle: string;
  emergencyNumber: string;
}

const { service, title, subtitle, emergencyNumber } = Astro.props;

const serviceColors = {
  plumbing: {
    bg: 'bg-blue-600',
    text: 'text-blue-600',
    accent: 'bg-blue-50',
    border: 'border-blue-200'
  },
  electrical: {
    bg: 'bg-yellow-600',
    text: 'text-yellow-600',
    accent: 'bg-yellow-50',
    border: 'border-yellow-200'
  }
};

const colors = serviceColors[service];
---

<section class={`${colors.bg} text-white py-16`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-4">
        {title}
      </h1>
      <p class="text-xl md:text-2xl mb-8 text-blue-100">
        {subtitle}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a
          href={`tel:${emergencyNumber}`}
          class="bg-red-600 hover:bg-red-700 text-white px-8 py-4 rounded-lg text-lg font-semibold flex items-center gap-2 transition-colors"
        >
          ðŸš¨ Emergency Call: {emergencyNumber}
        </a>
        <a
          href="#services"
          class="bg-white hover:bg-gray-100 text-gray-900 px-8 py-4 rounded-lg text-lg font-semibold transition-colors"
        >
          View Services
        </a>
      </div>
    </div>
  </div>
</section>

<section class="py-4 bg-white border-b">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-wrap justify-center gap-8 text-sm text-gray-600">
      <div class="flex items-center gap-2">
        <span class="w-3 h-3 bg-green-500 rounded-full"></span>
        24/7 Emergency Service
      </div>
      <div class="flex items-center gap-2">
        <span class="w-3 h-3 bg-green-500 rounded-full"></span>
        Licensed & Insured
      </div>
      <div class="flex items-center gap-2">
        <span class="w-3 h-3 bg-green-500 rounded-full"></span>
        Same-Day Service
      </div>
      <div class="flex items-center gap-2">
        <span class="w-3 h-3 bg-green-500 rounded-full"></span>
        Free Estimates
      </div>
    </div>
  </div>
</section>