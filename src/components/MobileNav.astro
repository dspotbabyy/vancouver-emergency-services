---
export interface Props {
  service?: 'plumbing' | 'electrical';
}

const { service } = Astro.props;
---

<!-- Mobile Navigation Component -->
<div class="md:hidden">
  <!-- Mobile Menu Button -->
  <button
    id="mobile-menu-button"
    type="button"
    class="text-stone-600 hover:text-stone-800 p-3 rounded-lg hover:bg-stone-50 transition-colors duration-200 touch-manipulation"
    aria-label="Toggle mobile menu"
    aria-expanded="false"
  >
    <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
    </svg>
    <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </button>

  <!-- Mobile Menu Overlay -->
  <div
    id="mobile-menu-overlay"
    class="fixed inset-0 bg-black/50 backdrop-blur-sm z-40 hidden"
    aria-hidden="true"
  ></div>

  <!-- Mobile Menu Panel -->
  <div
    id="mobile-menu-panel"
    class="fixed top-0 right-0 h-full w-80 max-w-[85vw] bg-white shadow-2xl z-50 transform translate-x-full transition-transform duration-300 ease-in-out"
    role="dialog"
    aria-modal="true"
    aria-labelledby="mobile-menu-title"
  >
    <!-- Menu Header -->
    <div class="flex items-center justify-between p-6 border-b border-stone-200">
      <h2 id="mobile-menu-title" class="text-lg font-semibold text-stone-800">
        DSpots Emergency
      </h2>
      <button
        id="mobile-menu-close"
        type="button"
        class="p-2 rounded-lg hover:bg-stone-100 transition-colors duration-200 touch-manipulation"
        aria-label="Close mobile menu"
      >
        <svg class="w-6 h-6 text-stone-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Emergency CTA at Top -->
    <div class="p-6 bg-red-50 border-b border-red-100">
      <a
        href="tel:6722003045"
        class="block w-full bg-red-600 hover:bg-red-700 text-white py-4 px-6 rounded-xl text-center font-bold text-lg transition-colors duration-200 touch-manipulation shadow-lg"
      >
        <div class="flex items-center justify-center gap-3">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
          </svg>
          <span>CALL NOW</span>
        </div>
        <div class="text-sm opacity-90 mt-1">(672) 200-3045</div>
      </a>
    </div>

    <!-- Navigation Links -->
    <nav class="p-6 space-y-3">
      <!-- Emergency Services - Top Priority -->
      <a
        href="/emergency"
        class="block py-4 px-4 bg-red-600 hover:bg-red-700 text-white rounded-xl transition-colors duration-200 touch-manipulation font-bold shadow-lg"
      >
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <span class="w-3 h-3 bg-white rounded-full animate-pulse"></span>
            <span>Get Emergency Help Now</span>
          </div>
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
          </svg>
        </div>
        <div class="text-xs text-red-100 mt-1">24/7 immediate response available</div>
      </a>

      <!-- Services Section -->
      <div class="pt-2">
        <p class="text-xs text-stone-500 font-medium tracking-wide uppercase mb-3 px-4">Dspots Contracting Services</p>

        <a
          href="/plumbing"
          class={`block py-3 px-4 rounded-lg transition-colors duration-200 touch-manipulation font-medium ${
            service === 'plumbing'
              ? 'bg-blue-50 text-blue-800 border border-blue-200'
              : 'text-slate-800 hover:bg-blue-50 hover:text-blue-700'
          }`}
        >
          <div class="flex items-center justify-between">
            <span>Find Plumbing Solutions</span>
            <div class="w-3 h-3 bg-blue-600 rounded-full"></div>
          </div>
          <div class="text-xs text-slate-500 mt-1">Pipes • Drains • Water heaters • Repairs</div>
        </a>

        <a
          href="/electrical"
          class={`block py-3 px-4 rounded-lg transition-colors duration-200 touch-manipulation font-medium ${
            service === 'electrical'
              ? 'bg-orange-50 text-orange-800 border border-orange-200'
              : 'text-slate-800 hover:bg-orange-50 hover:text-orange-600'
          }`}
        >
          <div class="flex items-center justify-between">
            <span>Find Electrical Solutions</span>
            <div class="w-3 h-3 bg-orange-500 rounded-full"></div>
          </div>
          <div class="text-xs text-slate-500 mt-1">Power • Panels • Outlets • Safety</div>
        </a>
      </div>

      <!-- Action Items -->
      <div class="pt-4 border-t border-stone-200">
        <button
          id="mobile-booking-btn"
          class="w-full py-3 px-4 bg-slate-700 hover:bg-slate-600 text-white rounded-lg transition-colors duration-200 touch-manipulation font-semibold"
        >
          <div class="flex items-center justify-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
            <span>Book Service Now</span>
          </div>
        </button>

        <a
          href="/contact"
          class="block py-3 px-4 text-slate-700 hover:bg-slate-50 rounded-lg transition-colors duration-200 touch-manipulation font-medium text-center mt-2"
        >
          Contact & Service Areas
        </a>
      </div>
    </nav>

    <!-- Quick Info -->
    <div class="p-6 border-t border-stone-200 bg-stone-50">
      <div class="space-y-3 text-sm">
        <div class="flex items-center gap-3">
          <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
          <span class="text-stone-700 font-medium">Available 24/7</span>
        </div>
        <div class="flex items-center gap-3">
          <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
          <span class="text-stone-700">Licensed & Insured</span>
        </div>
        <div class="flex items-center gap-3">
          <div class="w-2 h-2 bg-amber-500 rounded-full"></div>
          <span class="text-stone-700">60-Min Response</span>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Mobile menu functionality
  document.addEventListener('DOMContentLoaded', function() {
    const menuButton = document.getElementById('mobile-menu-button');
    const menuPanel = document.getElementById('mobile-menu-panel');
    const menuOverlay = document.getElementById('mobile-menu-overlay');
    const closeButton = document.getElementById('mobile-menu-close');
    const menuIcon = document.getElementById('menu-icon');
    const closeIcon = document.getElementById('close-icon');

    function openMenu() {
      menuPanel?.classList.remove('translate-x-full');
      menuOverlay?.classList.remove('hidden');
      menuButton?.setAttribute('aria-expanded', 'true');
      menuIcon?.classList.add('hidden');
      closeIcon?.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }

    function closeMenu() {
      menuPanel?.classList.add('translate-x-full');
      menuOverlay?.classList.add('hidden');
      menuButton?.setAttribute('aria-expanded', 'false');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
      document.body.style.overflow = '';
    }

    // Event listeners
    menuButton?.addEventListener('click', openMenu);
    closeButton?.addEventListener('click', closeMenu);
    menuOverlay?.addEventListener('click', closeMenu);

    // Close menu on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeMenu();
      }
    });

    // Close menu when clicking navigation links
    const navLinks = menuPanel?.querySelectorAll('a');
    navLinks?.forEach(link => {
      link.addEventListener('click', closeMenu);
    });

    // Mobile booking button functionality
    const mobileBookingBtn = document.getElementById('mobile-booking-btn');
    mobileBookingBtn?.addEventListener('click', function() {
      closeMenu();

      // Try to open the booking form from the sticky CTA
      setTimeout(() => {
        const openFormBtn = document.getElementById('open-booking-form');
        if (openFormBtn) {
          openFormBtn.click();
        }
      }, 300); // Small delay to ensure menu is closed
    });
  });
</script>