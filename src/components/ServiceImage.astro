---
export interface Props {
  service: 'plumbing' | 'electrical';
  alt: string;
  className?: string;
}

const { service, alt, className = '' } = Astro.props;

const servicePaths = {
  plumbing: '/images/plumbing/',
  electrical: '/images/electrical/'
};
---

<div class={`relative overflow-hidden rounded-lg ${className}`}>
  <img
    src={`${servicePaths[service]}hero-image.jpg`}
    alt={alt}
    class="w-full h-full object-cover"
    loading="lazy"
  />
  <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
</div>