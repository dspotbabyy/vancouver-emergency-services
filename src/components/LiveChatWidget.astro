<script>
  document.addEventListener('DOMContentLoaded', function() {
    const chatToggle = document.getElementById('chat-toggle');
    const chatPanel = document.getElementById('chat-panel');
    const chatIcon = document.getElementById('chat-icon');
    const closeChatIcon = document.getElementById('close-chat-icon');
    const notification = document.getElementById('chat-notification');

    let isOpen = false;

    function openChat() {
      chatPanel?.classList.remove('opacity-0', 'invisible', 'scale-95');
      chatIcon?.classList.add('hidden');
      closeChatIcon?.classList.remove('hidden');
      notification?.classList.add('hidden');
      isOpen = true;
    }

    function closeChat() {
      chatPanel?.classList.add('opacity-0', 'invisible', 'scale-95');
      chatIcon?.classList.remove('hidden');
      closeChatIcon?.classList.add('hidden');
      isOpen = false;
    }

    function toggleChat() {
      if (isOpen) {
        closeChat();
      } else {
        openChat();
      }
    }

    // Toggle chat on button click
    chatToggle?.addEventListener('click', toggleChat);

    // Close chat when clicking outside
    document.addEventListener('click', function(e) {
      const chatWidget = document.getElementById('chat-widget');
      if (!chatWidget?.contains(e.target as Node) && isOpen) {
        closeChat();
      }
    });

    // Hide notification after 10 seconds
    setTimeout(() => {
      notification?.classList.add('hidden');
    }, 10000);

    // Show notification periodically if chat hasn't been opened
    let notificationInterval = setInterval(() => {
      if (!isOpen && notification) {
        notification.classList.remove('hidden');
        setTimeout(() => {
          notification?.classList.add('hidden');
        }, 5000);
      }
    }, 30000); // Every 30 seconds

    // Track when WhatsApp links are clicked
    const whatsappLinks = chatPanel?.querySelectorAll('a[href*="wa.me"]');
    whatsappLinks?.forEach(link => {
      link.addEventListener('click', function() {
        closeChat();
        clearInterval(notificationInterval);
      });
    });

    // Hide chat widget in footer area to avoid conflicts
    function handleScroll() {
      const footer = document.querySelector('footer');
      const chatWidget = document.getElementById('chat-widget');

      if (footer && chatWidget) {
        const footerRect = footer.getBoundingClientRect();
        const windowHeight = window.innerHeight;

        if (footerRect.top < windowHeight + 100) {
          chatWidget.style.transform = 'translateY(20px)';
          chatWidget.style.opacity = '0.7';
        } else {
          chatWidget.style.transform = 'translateY(0)';
          chatWidget.style.opacity = '1';
        }
      }
    }

    let scrollTimeout: NodeJS.Timeout;
    window.addEventListener('scroll', () => {
      clearTimeout(scrollTimeout);
      scrollTimeout = setTimeout(handleScroll, 16);
    });

    handleScroll();
  });
</script>