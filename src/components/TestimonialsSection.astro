---
import OptimizedImage from './OptimizedImage.astro';

const testimonials = [
  {
    id: 1,
    name: "Sarah Mitchell",
    role: "Business Owner",
    location: "Downtown Vancouver",
    image: "/images/professional/b-o-lam-TQfp2oHsQP8-unsplash.jpg",
    rating: 5,
    quote: "Fixed our burst pipe in under an hour! Professional, clean, and fair pricing. They arrived exactly when promised and explained everything clearly.",
    service: "Emergency Plumbing"
  },
  {
    id: 2,
    name: "Mark Thompson",
    role: "Homeowner",
    location: "Kitsilano",
    image: "/images/professional/andre-spilborghs-m0soIvqOY-Q-unsplash.jpg",
    rating: 5,
    quote: "Electrical panel upgrade was completed perfectly. The team was knowledgeable, efficient, and followed all safety protocols. Highly recommend!",
    service: "Electrical Services"
  },
  {
    id: 3,
    name: "Eleanor Chen",
    role: "Property Manager",
    location: "Richmond",
    image: "/images/professional/upgraded-points-0QaKGF8_Jwk-unsplash.jpg",
    rating: 5,
    quote: "We've used DSpots Emergency Services multiple times for our properties. Always reliable, professional, and reasonably priced. Our go-to team!",
    service: "Property Maintenance"
  }
];
---

<section class="py-16 bg-stone-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-stone-800 mb-4">
        What Our Customers Say
      </h2>
      <p class="text-lg text-stone-600 max-w-3xl mx-auto">
        Don't just take our word for it. Here's what Vancouver residents and businesses say about our emergency services.
      </p>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-stone-100">
          <!-- Rating Stars -->
          <div class="flex items-center gap-1 mb-6">
            {Array.from({ length: testimonial.rating }).map((_, i) => (
              <svg key={i} class="w-5 h-5 text-amber-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            ))}
            <span class="ml-2 text-sm text-stone-500 font-medium">5.0</span>
          </div>

          <!-- Quote -->
          <blockquote class="text-stone-700 leading-relaxed mb-6 text-base">
            "{testimonial.quote}"
          </blockquote>

          <!-- Customer Info -->
          <div class="flex items-center gap-4 pt-4 border-t border-stone-100">
            <div class="w-12 h-12 rounded-full overflow-hidden flex-shrink-0">
              <OptimizedImage
                src={testimonial.image}
                alt={`${testimonial.name}, satisfied customer from ${testimonial.location} who received excellent ${testimonial.service.toLowerCase()}`}
                class="w-full h-full object-cover"
                width={48}
                height={48}
                loading="lazy"
                aspectRatio="1/1"
              />
            </div>
            <div class="flex-1 min-w-0">
              <div class="font-bold text-stone-800">{testimonial.name}</div>
              <div class="text-sm text-stone-600">{testimonial.role}</div>
              <div class="text-xs text-stone-500">{testimonial.location}</div>
            </div>
            <div class="text-right">
              <div class="text-xs text-stone-500 uppercase tracking-wide">{testimonial.service}</div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-12">
      <div class="bg-white rounded-2xl p-8 shadow-lg border border-stone-200 inline-block">
        <div class="flex items-center justify-center gap-4 mb-4">
          <div class="flex items-center gap-1">
            {Array.from({ length: 5 }).map((_, i) => (
              <svg key={i} class="w-6 h-6 text-amber-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            ))}
          </div>
          <span class="text-2xl font-bold text-stone-800">5.0 Stars</span>
        </div>
        <p class="text-stone-600 mb-6">
          <strong class="text-stone-800">Join 500+ satisfied customers</strong> who trust us with their emergency plumbing and electrical needs.
        </p>
        <button
          id="testimonial-booking-btn"
          class="bg-slate-700 hover:bg-slate-600 text-white px-8 py-3 rounded-xl font-semibold transition-all duration-200 touch-manipulation"
        >
          Get Your Free Estimate
        </button>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const testimonialBookingBtn = document.getElementById('testimonial-booking-btn');

    testimonialBookingBtn?.addEventListener('click', function() {
      // Try to open the booking form from the sticky CTA
      const openFormBtn = document.getElementById('open-booking-form');
      if (openFormBtn) {
        openFormBtn.click();
      }
    });
  });
</script>