---
import BaseLayout from '../layouts/BaseLayout.astro';
import ServiceCard from '../components/ServiceCard.astro';
---

<BaseLayout title="Professional Emergency Services" description="Vancouver's trusted 24/7 emergency plumbing and electrical services. Licensed, insured, and ready to help.">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 bg-gradient-to-r from-blue-900/20 to-amber-900/20"></div>
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.03"%3E%3Ccircle cx="30" cy="30" r="2"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-50"></div>

    <!-- Hero Content -->
    <div class="relative max-w-7xl mx-auto px-6 sm:px-8 lg:px-12 py-20 md:py-32">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">

        <!-- Left Column - Content -->
        <div class="space-y-8">
          <!-- Emergency Badge -->
          <div class="inline-flex items-center space-x-2 bg-red-600/90 backdrop-blur-sm px-4 py-2 rounded-full">
            <span class="w-2 h-2 bg-white rounded-full animate-pulse"></span>
            <span class="text-sm font-semibold tracking-wide uppercase">24/7 Emergency Response</span>
          </div>

          <!-- Main Headlines -->
          <div class="space-y-6">
            <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold leading-[0.9] tracking-tight">
              <span class="block text-white">Fast</span>
              <span class="block text-transparent bg-gradient-to-r from-blue-400 to-amber-400 bg-clip-text">
                Reliable
              </span>
              <span class="block text-white">Emergency</span>
            </h1>

            <div class="space-y-4">
              <h2 class="text-xl md:text-2xl font-light text-blue-100 leading-relaxed">
                Vancouver's #1 Plumbing & Electrical Experts
              </h2>
              <p class="text-lg text-slate-300 leading-relaxed max-w-lg">
                <strong class="text-white">60-minute response guarantee.</strong> Licensed professionals ready to solve your emergency problems with precision and care.
              </p>
            </div>
          </div>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 pt-4">
            <a
              href="tel:6045550123"
              class="group bg-red-600 hover:bg-red-500 text-white px-8 py-5 rounded-xl text-lg font-bold flex items-center justify-center gap-3 transition-all duration-300 shadow-2xl hover:shadow-red-500/25 hover:scale-105 transform"
            >
              <svg class="w-6 h-6 group-hover:animate-pulse" fill="currentColor" viewBox="0 0 24 24">
                <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
              </svg>
              <span>CALL NOW: (604) 555-0123</span>
            </a>

            <a
              href="#services"
              class="group bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white border border-white/20 hover:border-white/40 px-8 py-5 rounded-xl text-lg font-semibold flex items-center justify-center gap-3 transition-all duration-300"
            >
              <span>View Our Services</span>
              <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>

          <!-- Trust Indicators -->
          <div class="flex flex-wrap gap-6 pt-8 border-t border-white/10">
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-green-500/20 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </div>
              <span class="text-sm font-medium text-white">Licensed & Insured</span>
            </div>

            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-blue-500/20 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                </svg>
              </div>
              <span class="text-sm font-medium text-white">60-Min Response</span>
            </div>

            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-amber-500/20 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              </div>
              <span class="text-sm font-medium text-white">5-Star Service</span>
            </div>
          </div>
        </div>

        <!-- Right Column - Visual Content -->
        <div class="relative">
          <!-- Image Placeholder with Overlay -->
          <div class="relative aspect-[4/5] bg-gradient-to-br from-slate-700 to-slate-800 rounded-2xl overflow-hidden shadow-2xl">
            <!-- Placeholder for team image -->
            <div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 via-transparent to-transparent"></div>

            <!-- Team image placeholder content -->
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center space-y-4 p-8">
                <div class="w-24 h-24 bg-white/10 rounded-full mx-auto flex items-center justify-center">
                  <svg class="w-12 h-12 text-white/60" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C13.1 2 14 2.9 14 4C14 5.1 13.1 6 12 6C10.9 6 10 5.1 10 4C10 2.9 10.9 2 12 2ZM21 9V7L15 1H5C3.9 1 3 1.9 3 3V21C3 22.1 3.9 23 5 23H19C20.1 23 21 22.1 21 21V9H21ZM12 8.5C13.38 8.5 14.5 9.62 14.5 11H9.5C9.5 9.62 10.62 8.5 12 8.5ZM12 17C14.67 17 16.94 15.64 17.74 13.56C17.91 13.13 17.59 12.67 17.13 12.67H6.87C6.41 12.67 6.09 13.13 6.26 13.56C7.06 15.64 9.33 17 12 17Z"/>
                  </svg>
                </div>
                <div class="text-white/80">
                  <p class="text-sm font-medium">Professional Team Image</p>
                  <p class="text-xs opacity-60">Licensed technicians in action</p>
                </div>
              </div>
            </div>

            <!-- Customer testimonial overlay -->
            <div class="absolute bottom-6 left-6 right-6 bg-white/95 backdrop-blur-sm rounded-xl p-4 shadow-lg">
              <div class="flex items-start space-x-3">
                <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-amber-500 rounded-full flex items-center justify-center flex-shrink-0">
                  <span class="text-white font-bold text-sm">SM</span>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm text-slate-800 leading-relaxed">
                    "Fixed our burst pipe in under an hour! Professional, clean, and fair pricing."
                  </p>
                  <div class="flex items-center space-x-1 mt-2">
                    <div class="flex text-amber-400">
                      ★★★★★
                    </div>
                    <span class="text-xs text-slate-600 ml-2">Sarah M., Vancouver</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Floating Stats Cards -->
          <div class="absolute -right-4 top-12 bg-white rounded-xl p-4 shadow-xl max-w-[140px]">
            <div class="text-center">
              <div class="text-2xl font-bold text-slate-800">500+</div>
              <div class="text-xs text-slate-600">Happy Customers</div>
            </div>
          </div>

          <div class="absolute -left-4 bottom-24 bg-white rounded-xl p-4 shadow-xl max-w-[140px]">
            <div class="text-center">
              <div class="text-2xl font-bold text-slate-800">< 60min</div>
              <div class="text-xs text-slate-600">Average Response</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Wave -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-auto">
        <path d="M0 120L48 110C96 100 192 80 288 70C384 60 480 60 576 65C672 70 768 80 864 85C960 90 1056 90 1152 85C1248 80 1344 70 1392 65L1440 60V120H1392C1344 120 1248 120 1152 120C1056 120 960 120 864 120C768 120 672 120 576 120C480 120 384 120 288 120C192 120 96 120 48 120H0Z" fill="white"/>
      </svg>
    </div>
  </section>

  <!-- Services Overview -->
  <section id="services" class="py-24 bg-white">
    <div class="max-w-5xl mx-auto px-6 sm:px-8 lg:px-12">
      <div class="text-center space-y-6 mb-20">
        <h2 class="text-3xl md:text-4xl font-light text-stone-800 tracking-tight">
          Our Professional Services
        </h2>
        <p class="text-lg text-stone-600 max-w-2xl mx-auto leading-relaxed">
          Expert solutions for your emergency plumbing and electrical needs, delivered with precision and care.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-12">
        <!-- Plumbing Services Card -->
        <div class="group">
          <div class="bg-white border border-stone-200 rounded-2xl p-8 hover:shadow-lg transition-all duration-300 hover:border-stone-300">
            <div class="space-y-6">
              <div class="flex items-center space-x-4">
                <div class="w-12 h-12 bg-stone-100 rounded-xl flex items-center justify-center group-hover:bg-stone-200 transition-colors duration-200">
                  <div class="w-6 h-6 border-2 border-stone-400 rounded-full"></div>
                </div>
                <div>
                  <h3 class="text-xl font-medium text-stone-800">Plumbing Solutions</h3>
                  <p class="text-sm text-stone-500">Professional water system services</p>
                </div>
              </div>

              <ul class="space-y-3 text-sm text-stone-600">
                <li class="flex items-start space-x-3">
                  <div class="w-1.5 h-1.5 bg-stone-400 rounded-full mt-2 flex-shrink-0"></div>
                  <span>Emergency pipe repairs & leak detection</span>
                </li>
                <li class="flex items-start space-x-3">
                  <div class="w-1.5 h-1.5 bg-stone-400 rounded-full mt-2 flex-shrink-0"></div>
                  <span>Drain cleaning & maintenance services</span>
                </li>
                <li class="flex items-start space-x-3">
                  <div class="w-1.5 h-1.5 bg-stone-400 rounded-full mt-2 flex-shrink-0"></div>
                  <span>Water heater installation & repair</span>
                </li>
                <li class="flex items-start space-x-3">
                  <div class="w-1.5 h-1.5 bg-stone-400 rounded-full mt-2 flex-shrink-0"></div>
                  <span>Fixture replacement & upgrades</span>
                </li>
              </ul>

              <div class="pt-4">
                <a href="/plumbing" class="text-stone-800 hover:text-stone-600 text-sm font-medium flex items-center space-x-2 group transition-colors duration-200">
                  <span>View Plumbing Services</span>
                  <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Electrical Services Card -->
        <div class="group">
          <div class="bg-white border border-stone-200 rounded-2xl p-8 hover:shadow-lg transition-all duration-300 hover:border-stone-300">
            <div class="space-y-6">
              <div class="flex items-center space-x-4">
                <div class="w-12 h-12 bg-stone-100 rounded-xl flex items-center justify-center group-hover:bg-stone-200 transition-colors duration-200">
                  <div class="w-6 h-6">
                    <svg fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" class="text-stone-400">
                      <path stroke-linecap="round" stroke-linejoin="round" d="m3.75 13.5 10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75Z"/>
                    </svg>
                  </div>
                </div>
                <div>
                  <h3 class="text-xl font-medium text-stone-800">Electrical Services</h3>
                  <p class="text-sm text-stone-500">Safe & reliable electrical solutions</p>
                </div>
              </div>

              <ul class="space-y-3 text-sm text-stone-600">
                <li class="flex items-start space-x-3">
                  <div class="w-1.5 h-1.5 bg-stone-400 rounded-full mt-2 flex-shrink-0"></div>
                  <span>Power restoration & emergency repairs</span>
                </li>
                <li class="flex items-start space-x-3">
                  <div class="w-1.5 h-1.5 bg-stone-400 rounded-full mt-2 flex-shrink-0"></div>
                  <span>Panel upgrades & circuit installations</span>
                </li>
                <li class="flex items-start space-x-3">
                  <div class="w-1.5 h-1.5 bg-stone-400 rounded-full mt-2 flex-shrink-0"></div>
                  <span>Safety inspections & code compliance</span>
                </li>
                <li class="flex items-start space-x-3">
                  <div class="w-1.5 h-1.5 bg-stone-400 rounded-full mt-2 flex-shrink-0"></div>
                  <span>Outlet & switch repair services</span>
                </li>
              </ul>

              <div class="pt-4">
                <a href="/electrical" class="text-stone-800 hover:text-stone-600 text-sm font-medium flex items-center space-x-2 group transition-colors duration-200">
                  <span>View Electrical Services</span>
                  <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency CTA -->
  <section class="py-24 bg-stone-100">
    <div class="max-w-4xl mx-auto px-6 sm:px-8 lg:px-12 text-center">
      <div class="space-y-8">
        <h2 class="text-3xl md:text-4xl font-light text-stone-800">Need Emergency Service?</h2>
        <p class="text-lg text-stone-600 leading-relaxed max-w-2xl mx-auto">
          Our certified professionals are available around the clock to handle your urgent plumbing and electrical needs.
        </p>
        <div class="pt-4">
          <a
            href="tel:6045550123"
            class="bg-stone-800 hover:bg-stone-700 text-white px-10 py-5 rounded-full text-lg font-medium inline-flex items-center gap-4 transition-all duration-300 shadow-sm hover:shadow-md"
          >
            <span class="w-2 h-2 bg-emerald-400 rounded-full animate-pulse"></span>
            Call (604) 555-0123
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
