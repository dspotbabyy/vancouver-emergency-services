---
import BaseLayout from '../layouts/BaseLayout.astro';
import ServiceCard from '../components/ServiceCard.astro';
---

<BaseLayout title="Professional Emergency Services" description="Vancouver's trusted 24/7 emergency plumbing and electrical services. Licensed, insured, and ready to help.">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-600 via-blue-700 to-blue-800 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl md:text-7xl font-bold mb-6">
        Vancouver Emergency Services
      </h1>
      <p class="text-xl md:text-2xl mb-8 text-blue-100 max-w-3xl mx-auto">
        Professional plumbing and electrical services available 24/7. Licensed, insured, and ready to solve your emergency problems.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="tel:6045550123"
          class="bg-red-600 hover:bg-red-700 text-white px-8 py-4 rounded-lg text-lg font-semibold flex items-center justify-center gap-2 transition-colors"
        >
          🚨 Emergency: (604) 555-0123
        </a>
        <a
          href="#services"
          class="bg-white hover:bg-gray-100 text-blue-800 px-8 py-4 rounded-lg text-lg font-semibold transition-colors"
        >
          View Our Services
        </a>
      </div>
    </div>
  </section>

  <!-- Trust Indicators -->
  <section class="py-8 bg-white border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
        <div class="flex flex-col items-center">
          <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mb-2">
            <span class="text-2xl">🕒</span>
          </div>
          <span class="font-semibold text-gray-900">24/7 Available</span>
          <span class="text-sm text-gray-600">Always Here</span>
        </div>
        <div class="flex flex-col items-center">
          <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mb-2">
            <span class="text-2xl">🛡️</span>
          </div>
          <span class="font-semibold text-gray-900">Licensed & Insured</span>
          <span class="text-sm text-gray-600">Fully Protected</span>
        </div>
        <div class="flex flex-col items-center">
          <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center mb-2">
            <span class="text-2xl">⚡</span>
          </div>
          <span class="font-semibold text-gray-900">Fast Response</span>
          <span class="text-sm text-gray-600">Same Day Service</span>
        </div>
        <div class="flex flex-col items-center">
          <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center mb-2">
            <span class="text-2xl">💰</span>
          </div>
          <span class="font-semibold text-gray-900">Fair Pricing</span>
          <span class="text-sm text-gray-600">No Hidden Fees</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section id="services" class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Our Emergency Services</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          From burst pipes to electrical emergencies, we're Vancouver's trusted professionals for urgent home repairs.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 mb-12">
        <!-- Plumbing Services Card -->
        <div class="bg-white rounded-lg shadow-lg p-8">
          <div class="flex items-center mb-6">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mr-4">
              <span class="text-3xl">🔧</span>
            </div>
            <div>
              <h3 class="text-2xl font-bold text-gray-900">Emergency Plumbing</h3>
              <p class="text-blue-600 font-semibold">24/7 Plumbing Solutions</p>
            </div>
          </div>
          <ul class="space-y-2 mb-6 text-gray-700">
            <li class="flex items-center gap-2"><span class="text-green-500">✓</span> Burst pipe repairs</li>
            <li class="flex items-center gap-2"><span class="text-green-500">✓</span> Drain cleaning & unclogging</li>
            <li class="flex items-center gap-2"><span class="text-green-500">✓</span> Water heater repairs</li>
            <li class="flex items-center gap-2"><span class="text-green-500">✓</span> Toilet & fixture repairs</li>
            <li class="flex items-center gap-2"><span class="text-green-500">✓</span> Emergency shut-offs</li>
          </ul>
          <a href="/plumbing" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold inline-block transition-colors">
            View Plumbing Services
          </a>
        </div>

        <!-- Electrical Services Card -->
        <div class="bg-white rounded-lg shadow-lg p-8">
          <div class="flex items-center mb-6">
            <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mr-4">
              <span class="text-3xl">⚡</span>
            </div>
            <div>
              <h3 class="text-2xl font-bold text-gray-900">Emergency Electrical</h3>
              <p class="text-yellow-600 font-semibold">24/7 Electrical Solutions</p>
            </div>
          </div>
          <ul class="space-y-2 mb-6 text-gray-700">
            <li class="flex items-center gap-2"><span class="text-green-500">✓</span> Power outage repairs</li>
            <li class="flex items-center gap-2"><span class="text-green-500">✓</span> Circuit breaker issues</li>
            <li class="flex items-center gap-2"><span class="text-green-500">✓</span> Emergency panel upgrades</li>
            <li class="flex items-center gap-2"><span class="text-green-500">✓</span> Outlet & switch repairs</li>
            <li class="flex items-center gap-2"><span class="text-green-500">✓</span> Safety inspections</li>
          </ul>
          <a href="/electrical" class="bg-yellow-600 hover:bg-yellow-700 text-white px-6 py-3 rounded-lg font-semibold inline-block transition-colors">
            View Electrical Services
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency CTA -->
  <section class="py-16 bg-red-600 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Have a Plumbing or Electrical Emergency?</h2>
      <p class="text-xl mb-8 text-red-100">
        Don't wait - call now for immediate assistance. Our certified professionals are standing by 24/7.
      </p>
      <a
        href="tel:6045550123"
        class="bg-white hover:bg-gray-100 text-red-600 px-8 py-4 rounded-lg text-xl font-bold inline-flex items-center gap-3 transition-colors"
      >
        📞 Call (604) 555-0123 Now
      </a>
    </div>
  </section>
</BaseLayout>
