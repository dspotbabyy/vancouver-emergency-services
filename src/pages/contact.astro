---
import Base from '../layouts/Base.astro';
import CallLink from '../components/CallLink.astro';
---

<Base
  title="Contact Us"
  description="Contact DSpots Emergency Plumbing & Electrical Services for 24/7 emergency assistance. Licensed professionals ready to help."
>
  <!-- Hero Section -->
  <section class="bg-gray-800 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-4">
        Contact Us
      </h1>
      <p class="text-xl text-gray-300 mb-8">
        Get in touch for emergency services or schedule regular maintenance
      </p>
    </div>
  </section>

  <!-- Contact Information -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Emergency Contact -->
        <div class="bg-red-50 p-8 rounded-lg border-l-4 border-red-500">
          <h2 class="text-2xl font-bold text-red-800 mb-4 flex items-center gap-2">
            üö® Emergency Services
          </h2>
          <p class="text-red-700 mb-6">
            For plumbing or electrical emergencies, call immediately. We're available 24/7 for urgent situations.
          </p>
          <a
            href="tel:+16722384660"
            class="bg-red-600 hover:bg-red-700 text-white px-6 py-3 rounded-lg font-semibold inline-flex items-center gap-2 transition-colors text-lg"
          >
            üìû Call (672) 238-4660 Now
          </a>
        </div>

        <!-- Regular Contact -->
        <div class="bg-blue-50 p-8 rounded-lg border-l-4 border-blue-500">
          <h2 class="text-2xl font-bold text-blue-800 mb-4 flex items-center gap-2">
            üìÖ Schedule Service
          </h2>
          <p class="text-blue-700 mb-6">
            For non-emergency services, maintenance, or estimates, contact us during business hours.
          </p>
          <div class="space-y-3">
            <a
              href="tel:6045550124"
              class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold inline-flex items-center gap-2 transition-colors"
            >
              üìû Call (604) 555-0124
            </a>
            <div class="text-blue-700">
              <p class="text-sm">Business Hours:</p>
              <p class="font-semibold">Mon-Fri: 7:00 AM - 6:00 PM</p>
              <p class="font-semibold">Sat-Sun: 8:00 AM - 5:00 PM</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Details -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Get In Touch</h2>
        <p class="text-lg text-gray-600">Multiple ways to reach our professional team</p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl">üìû</span>
          </div>
          <h3 class="text-xl font-semibold mb-2">Phone</h3>
          <div class="space-y-2 text-gray-600">
            <p class="font-semibold text-red-600">Emergency: <CallLink urgent={true} /></p>
            <p>Regular: (604) 555-0124</p>
          </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl">üìß</span>
          </div>
          <h3 class="text-xl font-semibold mb-2">Email</h3>
          <div class="space-y-2 text-gray-600">
            <p>info@dspots.com</p>
            <p>emergency@dspots.com</p>
          </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md text-center">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl">üìç</span>
          </div>
          <h3 class="text-xl font-semibold mb-2">Service Area</h3>
          <div class="space-y-2 text-gray-600">
            <p>Vancouver & Lower Mainland</p>
            <p>Burnaby, Richmond, Surrey</p>
            <p>North & West Vancouver</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Areas We Serve</h2>
        <p class="text-lg text-gray-600">Professional plumbing and electrical services throughout the Lower Mainland</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="text-center">
          <h4 class="font-semibold text-gray-900 mb-2">Vancouver</h4>
          <ul class="text-sm text-gray-600 space-y-1">
            <li>Downtown</li>
            <li>West End</li>
            <li>Kitsilano</li>
            <li>Mount Pleasant</li>
          </ul>
        </div>

        <div class="text-center">
          <h4 class="font-semibold text-gray-900 mb-2">North Shore</h4>
          <ul class="text-sm text-gray-600 space-y-1">
            <li>North Vancouver</li>
            <li>West Vancouver</li>
            <li>Deep Cove</li>
            <li>Lynn Valley</li>
          </ul>
        </div>

        <div class="text-center">
          <h4 class="font-semibold text-gray-900 mb-2">East Vancouver</h4>
          <ul class="text-sm text-gray-600 space-y-1">
            <li>Burnaby</li>
            <li>New Westminster</li>
            <li>Coquitlam</li>
            <li>Port Moody</li>
          </ul>
        </div>

        <div class="text-center">
          <h4 class="font-semibold text-gray-900 mb-2">South</h4>
          <ul class="text-sm text-gray-600 space-y-1">
            <li>Richmond</li>
            <li>Surrey</li>
            <li>Delta</li>
            <li>Langley</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency CTA -->
  <section class="py-16 bg-red-600 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Don't Wait - Call Now!</h2>
      <p class="text-xl mb-8 text-red-100">
        Emergency plumbing and electrical problems require immediate attention. Our certified professionals are ready to help 24/7.
      </p>
      <a
        href="tel:+16722384660"
        class="bg-white hover:bg-gray-100 text-red-600 px-8 py-4 rounded-lg text-xl font-bold inline-flex items-center gap-3 transition-colors"
      >
        üìû Emergency: (672) 238-4660
      </a>
    </div>
  </section>
</Base>