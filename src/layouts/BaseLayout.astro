---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
  service?: 'plumbing' | 'electrical';
}

const { title, description = 'Vancouver Emergency Plumbing & Electrical Services - 24/7 professional services', service } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <title>{title} | Vancouver Emergency Services</title>
  </head>
  <body class="h-full bg-stone-50 font-sans antialiased" style="font-family: 'Inter', system-ui, sans-serif;">
    <header class="bg-white/95 backdrop-blur-md sticky top-0 z-50 border-b border-stone-200/50">
      <nav class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-12">
        <div class="flex justify-between items-center h-20">
          <div class="flex items-center">
            <div class="flex flex-col">
              <h1 class="text-lg font-semibold text-stone-800 tracking-tight leading-tight">
                Vancouver Emergency
              </h1>
              <span class="text-xs text-stone-500 font-medium tracking-wide uppercase">
                Professional Services
              </span>
            </div>
          </div>
          <div class="hidden md:flex items-center space-x-1">
            <a href="/" class="text-stone-600 hover:text-stone-800 px-4 py-2.5 rounded-full text-sm font-medium transition-colors duration-200">
              Home
            </a>
            <a href="/plumbing" class={`px-4 py-2.5 rounded-full text-sm font-medium transition-all duration-200 ${service === 'plumbing' ? 'bg-stone-100 text-stone-800 shadow-sm' : 'text-stone-600 hover:text-stone-800 hover:bg-stone-50'}`}>
              Plumbing
            </a>
            <a href="/electrical" class={`px-4 py-2.5 rounded-full text-sm font-medium transition-all duration-200 ${service === 'electrical' ? 'bg-stone-100 text-stone-800 shadow-sm' : 'text-stone-600 hover:text-stone-800 hover:bg-stone-50'}`}>
              Electrical
            </a>
            <a href="/contact" class="bg-stone-800 text-white hover:bg-stone-700 px-6 py-2.5 rounded-full text-sm font-medium transition-all duration-200 ml-4 shadow-sm">
              Contact Us
            </a>
          </div>

          <!-- Mobile menu button -->
          <div class="md:hidden">
            <button type="button" class="text-stone-600 hover:text-stone-800 p-2 rounded-lg">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="bg-white border-t border-stone-200">
      <div class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-12 py-16">
        <div class="grid md:grid-cols-4 gap-12 mb-16">
          <div class="md:col-span-2">
            <div class="mb-6">
              <h3 class="text-lg font-semibold text-stone-800 mb-2">Vancouver Emergency Services</h3>
              <p class="text-stone-600 text-sm leading-relaxed max-w-md">
                Professional plumbing and electrical services with a commitment to quality, reliability, and customer satisfaction throughout Vancouver.
              </p>
            </div>
            <div class="flex items-center space-x-6">
              <div class="text-xs text-stone-500 font-medium">
                24/7 EMERGENCY SERVICE
              </div>
              <div class="w-2 h-2 bg-emerald-400 rounded-full animate-pulse"></div>
            </div>
          </div>

          <div>
            <h4 class="font-medium text-stone-800 mb-4 text-sm tracking-wide">Services</h4>
            <ul class="space-y-3 text-sm text-stone-600">
              <li><a href="/plumbing" class="hover:text-stone-800 transition-colors duration-200">Plumbing Solutions</a></li>
              <li><a href="/electrical" class="hover:text-stone-800 transition-colors duration-200">Electrical Services</a></li>
              <li><a href="/contact" class="hover:text-stone-800 transition-colors duration-200">Emergency Response</a></li>
            </ul>
          </div>

          <div>
            <h4 class="font-medium text-stone-800 mb-4 text-sm tracking-wide">Contact</h4>
            <div class="space-y-3 text-sm text-stone-600">
              <div class="flex items-center space-x-2">
                <span class="text-stone-400">Phone:</span>
                <span class="font-medium">(604) 555-0123</span>
              </div>
              <div class="flex items-center space-x-2">
                <span class="text-stone-400">Email:</span>
                <span>info@vancouveremergency.com</span>
              </div>
              <div class="flex items-start space-x-2">
                <span class="text-stone-400">Area:</span>
                <span>Vancouver & Lower Mainland</span>
              </div>
            </div>
          </div>
        </div>

        <div class="border-t border-stone-200 pt-8">
          <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
            <p class="text-xs text-stone-500">
              © 2024 Vancouver Emergency Services. Licensed & Insured.
            </p>
            <div class="flex items-center space-x-6 text-xs text-stone-500">
              <span>Professional</span>
              <span>•</span>
              <span>Reliable</span>
              <span>•</span>
              <span>Available 24/7</span>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>